@inherits ConfirmBase

@if (ShowModal)
{
    <div class="modal fade show d-block" id="deleteModal" tabindex="1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-tittle" id="deleteModalLabel">Confirmation de suppression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close"
                            @onclick="() => ConfirmationChange(false)">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-center">@ConfirmationMessage</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"
                            @onclick="() => ConfirmationChange(false)">Annuler
                    </button>
                    <button type="button" class="btn btn-danger"
                            @onclick="() => ConfirmationChange(true)">Supprimer</button>
                </div>
            </div>
        </div>
    </div>
}